# Stage 1: Build
FROM maven:3.9.9-eclipse-temurin-21 AS builder
WORKDIR /app
COPY backend/pom.xml .
COPY backend/src ./src
RUN mvn clean package -DskipTests

# Stage 2: Runtime
FROM eclipse-temurin:21-jdk-jammy
WORKDIR /app

COPY --from=builder /app/target/blogAPI-0.0.1-SNAPSHOT.jar app.jar
COPY media ./media

# Drop privileges for security
RUN useradd -m appuser && chown -R appuser:appuser /app/media
USER appuser

EXPOSE 8080
ENTRYPOINT ["java", "-jar", "app.jar"]
